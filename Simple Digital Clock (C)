#include <stdio.h>
#include <stdlib.h>

int main() {
    time_t timer;
    struct tm* tm_info;
    char buffer[26];

    while (1) {
        time(&timer);
        tm_info = localtime(&timer);

        // Format: YYYY-MM-DD HH:MM:SS
        strftime(buffer, 26, "%Y-%m-%d %H:%M:%S", tm_info);

        #ifdef _WIN32
        system("cls");
        #else
        system("clear");
        #endif
        
        printf("Current System Time: %s\n", buffer);
        
        SLEEP(1);
    }
    return 0;
}
