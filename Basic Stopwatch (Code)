#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    time_t start_time, current_time;
    double elapsed_time;

    time(&start_time);
    
    printf("Stopwatch Started. Press Ctrl+C to stop.\n");

    while (1) {
        time(&current_time);
        elapsed_time = difftime(current_time, start_time);

        #ifdef _WIN32
        system("cls");
        #else
        system("clear");
        #endif
        
        printf("Elapsed Time: %.0f seconds\n", elapsed_time);
        
        SLEEP(1);
    }
    return 0;
}
